<UserControl x:Class="EMS.MVVM.View.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EMS.MVVM.View"
             xmlns:vm="clr-namespace:EMS.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="700" 
             d:DesignWidth="900"
             Style="{StaticResource PageStyle}">
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto">

        <Grid>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

            <StackPanel>

                <!-- Current -->
                
                <Grid>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Background="#ffeb3b"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="20"
                        Margin="-10"
                        Width="300"
                        Height="40"/>

                    <TextBlock Text="Current"
                           Foreground="Black"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Margin="15"/>

                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Lower Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=CurrentLowerThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Upper Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=CurrentUpperThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Phase Voltage -->
                
                <Grid>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Background="#ffeb3b"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="20"
                        Margin="-10"
                        Width="300"
                        Height="40"/>

                    <TextBlock Text="Phase Voltage"
                           Foreground="Black"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Margin="15"/>

                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Lower Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=PhaseVoltageLowerThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Upper Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=PhaseVoltageUpperThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Line Voltage -->

                <Grid>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Background="#ffeb3b"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="20"
                        Margin="-10"
                        Width="300"
                        Height="40"/>

                    <TextBlock Text="Line Voltage"
                           Foreground="Black"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Margin="15"/>

                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Lower Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=LineVoltageLowerThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Upper Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=LineVoltageUpperThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                


                <Button Command="{Binding SaveSettingsCommand}"
                    Style="{StaticResource Function}"
                    Content="Save"/>

            </StackPanel>

            <StackPanel Grid.Column="1">

                <!-- Active Power -->

                <Grid>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Background="#ffeb3b"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="20"
                        Margin="-10"
                        Width="300"
                        Height="40"/>

                    <TextBlock Text="Active Power"
                           Foreground="Black"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Margin="15"/>

                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Lower Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=ActivePowerLowerThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Upper Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=ActivePowerUpperThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Reactive Power -->

                <Grid>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Background="#ffeb3b"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="20"
                        Margin="-10"
                        Width="300"
                        Height="40"/>

                    <TextBlock Text="Reactive Power"
                           Foreground="Black"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Margin="15"/>

                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Lower Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=ReactivePowerLowerThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Upper Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=ReactivePowerUpperThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Apparent Power -->

                <Grid>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Background="#ffeb3b"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="20"
                        Margin="-10"
                        Width="300"
                        Height="40"/>

                    <TextBlock Text="Apparent Power"
                           Foreground="Black"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Margin="15"/>

                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Lower Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=ApparentPowerLowerThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Upper Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=ApparentPowerUpperThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Power Factor -->

                <Grid>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="Auto"/>

                    </Grid.RowDefinitions>

                    <Border Background="#ffeb3b"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="20"
                        Margin="-10"
                        Width="300"
                        Height="40"/>

                    <TextBlock Text="Power Factor"
                           Foreground="Black"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Margin="15"/>

                </Grid>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Lower Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=PowerFactorLowerThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Upper Threshold: "
                           Style="{StaticResource TextStyle}"
                           Foreground="#DBDBDB"
                           Margin="10"/>

                    <TextBox Style="{StaticResource NoTextBoxStyle}"
                         Width="100"
                         Height="40"
                         Margin="10 0 0 0"
                         HorizontalAlignment="Left"
                         VerticalContentAlignment="Center"
                         Foreground="#DBDBDB"
                         Padding="5"
                         FontSize="25"
                         Text="{Binding Path=PowerFactorUpperThresholdString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                </StackPanel>

            </StackPanel>

        </Grid>
        
    </ScrollViewer>
    
</UserControl>
